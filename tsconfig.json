{
  "compilerOptions": {
    "target": "es2015",
    
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/models/Papers.js", "src/dbConfig/db.js", "src/cloudinaryConfig/cloudinary.js", "src/components/elements/StarRatings.js", "src/app/api/auth/[...nextauth].js", "src/app/api/auth/[...nextauth].js", "src/utils/helper.js", "src/recoil/authState.js"],
  "exclude": ["node_modules"]
}
